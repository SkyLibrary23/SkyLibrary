<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skylibrary.mappers.applyBookMapper">
<insert id="insert" parameterType="applyBookVO">
	INSERT INTO abook
	(
		userID
		,applyISBN
		,applySubject
		,applyCompany
		,applyPublicationDate
		,applyWriter
		,applyPrice
		,applyWhy
	)VALUE
	(
		#{userID}
		,#{applyISBN}
		,#{applySubject}
		,#{applyCompany}
		,#{applyPublicationDate}
		,#{applyWriter}
		,#{applyPrice}
		,#{applyWhy}
	)
</insert>
<select id="view" parameterType="String" resultType="applyBookVO">
	SELECT
			applyNo
			,applyISBN
			,applySubject
			,applyCompany
			,applyPublicationDate
			,applyDate
			,applyWriter
			,applyPrice
			,applyWhy
			,applyType
				
	FROM  abook
	WHERE userID = #{userID}
</select>


<update id="checkedSave" parameterType="applyBookVO">
	UPDATE abook 
	SET    applyType=#{applyType} 
		   ,applyOkDate=now() 
	WHERE  applyNo=#{applyNo}
</update>
<select id="wishSearchOk" parameterType="searchVO" resultType="java.util.Map">
	SELECT * 
	FROM abook
	WHERE 1=1
	<if test="selectType != null and selectType != '' and selectType != 4">
	AND applyType=#{selectType}
	</if>
	<if test="startDate != null and endDate != null 
	and startDate != '' and endDate != ''">
	AND applyOkDate BETWEEN #{startDate} AND #{endDate}
	</if>
	ORDER BY applyNo DESC
</select>
<select id="wishDetailOk" parameterType="applyBookVO" resultType="java.util.Map">
	SELECT * 
	FROM  abook 
	WHERE applyNo=#{applyNo}
</select>
<select id="userWishInfoOk" parameterType="sessionVO" resultType="java.util.Map">
	SELECT * 
	FROM  abook 
	WHERE userID=#{userID}
</select>	
</mapper>